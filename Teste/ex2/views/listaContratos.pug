extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h1 
                span Lista de Contratos
        
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Objeto
                    th Data de Celebração do Contrato
                    th Preço Contratual
                    th NIPC - Comunicante
                    th Entidade - Comunicante
                each contrato in lContratos
                    tr
                        td
                            a(href="/" + contrato._id)= contrato._id
                        td= contrato.objectoContrato
                        td= contrato.dataCelebracaoContrato
                        td= contrato.precoContratual
                        td
                            a(href= "/entidades/" + contrato.entidade_comunicante)= contrato.NIPC_entidade_comunicante
                        td= contrato.entidade_comunicante
        footer.w3-container.w3-blue
            h5 Generated by Rafael Gomes - A96208 in #{date}
